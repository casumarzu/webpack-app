.todo-list
  font-size 1em
  display inline-block
  text-align left
  padding: 1em 0
  &__item
    margin: 1em 0
    color = #4444D9
    background color - 20%
    transition all .2s ease
    cursor pointer
    // text-align center
    &:hover
      background color - 30%
  label
    display block
    cursor pointer
    padding 1em
  span
    transition all .5s ease
    padding-left 0.5em
    position relative
    &:after
      content ''
      width 100%
      height 2px
      left 0
      bottom 0
      position absolute
      background red + 20%
      transition: all .5s ease
      transform scaleX(0)
  input:checked + span
    &:after
      transform scaleX(1)

.MeatClass
  padding 3em

.ShitClass
  margin 3em
